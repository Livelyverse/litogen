{
  "name": "litogen",
  "version": "1.0.0",
  "description": "Lively Token Generator",
  "main": "index.js",
  "scripts": {
    "accounts": "yarn run hardhat accounts",
    "compile": "yarn run hardhat compile",
    "clean": "rimraf artifacts cache coverage typechain export coverage.json",
    "copy-typechain": "copyfiles -u 1 \"./typechain/**/*\" export/",
    "console": "yarn run hardhat console",
    "start": "yarn run hardhat node",
    "run": "yarn run hardhat run",
    "guide": "yarn run hardhat help",
    "info": "npm-scripts-info",
    "test": "yarn run hardhat test",
    "test:gas": "REPORT_GAS=true yarn run hardhat test",
    "test:coverage": "yarn run hardhat coverage --solcoverjs ./.solcover.js",
    "deploy:local": "yarn run hardhat deploy --network localhost",
    "deploy:mumbai": "yarn run hardhat deploy --network mumbai",
    "deploy:polygon": "yarn run hardhat deploy --network polygon",
    "node-deploy:local": "TS_NODE_FILES=true yarn run ts-node scripts/deploy.ts",
    "eslint:check": "yarn run eslint '**/*.{js,ts}'",
    "eslint:fix": "yarn run eslint '**/*.{js,ts}' --fix",
    "prettier:check": "yarn run prettier '**/*.{json,sol,md}' --check",
    "prettier:fix": "yarn run prettier '**/*.{json,sol,md}' --write",
    "solhint:check": "yarn run solhint 'contracts/**/*.sol'",
    "solhint:fix": "yarn run solhint 'contracts/**/*.sol' --fix",
    "export-artifact": "yarn run hardhat export-artifacts ./export/artifacts",
    "export-abi": "yarn run hardhat export-abi",
    "build": "run-s clean compile copy-typechain export-artifact export-abi",
    "preRelease": "run-s eslint:fix solhint:fix prettier:fix"
  },
  "scripts-info": {
    "accounts": "Prints the list of accounts",
    "compile": "Compiles the entire project, building all artifacts",
    "clean": "Clears the cache and deletes all artifacts",
    "start": "Starts a JSON-RPC server on top of Hardhat Network",
    "guide": "Run hardhat help",
    "info": "Displays information about the scripts.",
    "test": "Runs mocha tests",
    "test:gas": "Runs mocha tests along with gas reports",
    "test:coverage": "Generates a code coverage report for tests",
    "deploy:dev": "Deploy scripts in local env",
    "node-deploy:dev": "Deploy scripts in ts local env",
    "eslint:check": "Launch Eslint Check",
    "eslint:fix": "Launch Eslint Fix",
    "prettier:check": "Launch Prettier Check",
    "prettier:fix": "Launch Prettier Fix",
    "solhint:check": "Launch Solhint Check",
    "solhint:fix": "Launch Solhint Fix",
    "export": "Export generated artifacts",
    "export-abi": "Export abies",
    "build": "Build project",
    "preRelease": "Launch Eslint, Prettier and Solhint commands"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Livelyverse/litogen.git"
  },
  "keywords": [
    "livelyverse",
    "token",
    "generator"
  ],
  "author": "Sina Tadayon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Livelyverse/litogen/issues"
  },
  "homepage": "https://github.com/Livelyverse/litogen#readme",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "chai": "^4.3.7",
    "config": "^3.3.9",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.3.0",
    "hardhat": "^2.13.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.26",
    "hardhat-gas-reporter": "^1.0.9",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "rimraf": "^5.0.0",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/contracts-upgradeable": "^4.8.2"
  }
}
